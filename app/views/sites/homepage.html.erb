<div class="container-fluid">
    <div class="row">
        <div id="homecarousel" class="carousel slide">
            <div class="carousel-inner">
                <div class="item active">
                    <img src="assets/carousel/carousel01.jpg" alt="" />
                </div>
                <div class="item">
                    <img src="assets/carousel/carousel05.jpg" alt="" />
                </div>
                <div class="item">
                    <img src="assets/carousel/carousel03.jpg" alt="" />
                </div>
                <div class="item">
                    <img src="assets/carousel/carousel04.jpg" alt="" />
                </div>
            </div>

            <a class="left carousel-control" href="#homecarousel" role="button" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
            <a class="right carousel-control" href="#homecarousel" role="button" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
            <div class="search">
                <div class="container">
                  <div class="row">
                    <div class="col-md-10 col-md-offset-1">
                      <div class="form-section">
                        <div class="row">
                            <div class="col-md-12" style="width:110%;">
                                <%= form_tag offices_path, :method => :get do %>
                                <h1>Trouvez un<br>centre d'affaires</h1>
                                  <p>
                                    <%= text_field_tag :search, params[:search], :placeholder => 'Addresse ou Zip code', :id => "geolocation" %>
                                    <%= submit_tag "Recherche", :name => nil, :class =>"btn btn-default btn-primary" %>
                                  </p>
                                <% end %>
                            </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
            </div>
        </div>

        <div id="descriptions">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-4">
                        <img class="img-circle" src="assets/icons/search-icon.png">
                        <h2>Recherchez</h2>
                        <p></p>
                        <p class="description">parmi une large sélection<br>de centres d'affaires</p>
                    </div>
                    <div class="col-lg-4">
                        <img class="img-circle" src="assets/icons/contact-icon.png">
