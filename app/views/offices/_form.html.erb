<div class="container form">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3">
            </div>
            <div class="col-lg-6">
                <%= form_for(@office) do |f| %>
                    <h2>Creez un Centre d'Affaires</h2>

                    <div class="form-group">
                        <%= f.label :title_of_offer %>
                        <%= f.text_field :title_of_offer %>
                    </div>

                    <div class="form-group">
                        <%= f.label :full_street_address %>
                        <%= f.text_field :full_street_address %>
                    </div>

                    <div class="form-group">
                        <%= f.label :meters_squared %>
                        <%= f.text_field :meters_squared %>
                    </div>

                    <div class="form-group">
                        <%= f.label :cost_per_month %>
                        <%= f.text_field :cost_per_month %>
                    </div>

                    <div class="form-group">
                        <%= f.file_field :image %>
                    </div>

                    <div><%= f.submit "Creation", :class => "btn btn-default", :id => "btn-form" %><br /><br /></div>
                <% end %>
                
            </div>
            <div class="col-lg-3">
            </div>
        </div>
    </div>
</div>